{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "input": {
      "value": {
        "Name": "e9bfbd62-c238-4af8-9249-ffac795a5497",
        "ResourceType": "Microsoft.Authorization/policyDefinitions",
        "Properties": {
          "Description": null,
          "DisplayName": "Deploy-DNSZoneGroup-AKS",
          "Mode": "Indexed",
          "Parameters": {
            "privateDnsZoneId": {
              "type": "String",
              "metadata": {
                "displayName": "privateDnsZoneId",
                "strongType": "Microsoft.Network/privateDnsZones"
              }
            },
            "location": {
              "type": "String",
              "metadata": {
                "displayName": "Cluster location",
                "description": "The location of the AKS cluster/private endpoint",
                "strongType": "location"
              },
              "defaultValue": "westeurope"
            }
          },
          "PolicyRule": {
            "if": {
              "allOf": [
                {
                  "field": "type",
                  "equals": "Microsoft.Network/privateEndpoints"
                },
                {
                  "field": "location",
                  "equals": "[parameters('location')]"
                },
                {
                  "field": "Microsoft.Network/privateEndpoints/privateLinkServiceConnections[*].privateLinkServiceId",
                  "contains": "Microsoft.ContainerService/managedClusters"
                },
                {
                  "count": {
                    "field": "Microsoft.Network/privateEndpoints/privateLinkServiceConnections[*].groupIds[*]",
                    "where": {
                      "field": "Microsoft.Network/privateEndpoints/privateLinkServiceConnections[*].groupIds[*]",
                      "equals": "management"
                    }
                  },
                  "greaterOrEquals": 1
                }
              ]
            },
            "then": {
              "effect": "deployIfNotExists",
              "details": {
                "type": "Microsoft.Network/privateEndpoints/privateDnsZoneGroups",
                "roleDefinitionIds": [
                  "/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
                ],
                "existenceCondition": {
                  "allOf": [
                    {
                      "field": "Microsoft.Network/privateEndpoints/privateDnsZoneGroups/privateDnsZoneConfigs[*].privateDnsZoneId",
                      "equals": "[parameters('privateDnsZoneId')]"
                    }
                  ]
                },
                "deployment": {
                  "properties": {
                    "mode": "incremental",
                    "template": {
                      "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                      "contentVersion": "1.0.0.0",
                      "parameters": {
                        "privateDnsZoneId": {
                          "type": "string"
                        },
                        "privateEndpointName": {
                          "type": "string"
                        },
                        "location": {
                          "type": "string"
                        }
                      },
                      "resources": [
                        {
                          "name": "[concat(parameters('privateEndpointName'), '/deployedByPolicy')]",
                          "type": "Microsoft.Network/privateEndpoints/privateDnsZoneGroups",
                          "apiVersion": "2020-07-01",
                          "location": "[parameters('location')]",
                          "properties": {
                            "privateDnsZoneConfigs": [
                              {
                                "name": "[concat(parameters('privateEndpointName'), '-aRecord')]",
                                "properties": {
                                  "privateDnsZoneId": "[parameters('privateDnsZoneId')]"
                                }
                              }
                            ]
                          }
                        }
                      ]
                    },
                    "parameters": {
                      "privateDnsZoneId": {
                        "value": "[parameters('privateDnsZoneId')]"
                      },
                      "privateEndpointName": {
                        "value": "[field('name')]"
                      },
                      "location": {
                        "value": "[field('location')]"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
